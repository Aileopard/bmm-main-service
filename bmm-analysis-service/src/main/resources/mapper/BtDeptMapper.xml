<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.leo.zu.dao.BtDeptDao">

    <!-- 也可以使用resultType,但是推荐使用resultMap -->
    <resultMap id="BaseResultMap" type="com.leo.zu.entities.BtDept">
        <id column="CORP_CODE" property="corpCode" jdbcType="VARCHAR"/>
        <id column="Dept_NAME" property="deptName" jdbcType="VARCHAR"/>
        <id column="dept_CODE" property="deptCode" jdbcType="VARCHAR"/>
        <id column="IM_CUST_NO" property="imCustNo" jdbcType="VARCHAR"/>
        <id column="PARENT_CODE" property="parentCode" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getDeptBydeptCode" resultType="com.leo.zu.entities.BtDept">
        select *
        from bt_dept
        where 1=1
        and PARENT_CODE = #{parentCode}
        and corp_code = #{corpCode}
        and IM_CUST_NO = #{imCustNo}
    </select>
</mapper>


