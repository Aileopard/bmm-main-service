<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.leo.zu.dao.FbsBudgetCorpDao">

    <!-- 也可以使用resultType,但是推荐使用resultMap -->
    <resultMap id="BaseResultMap" type="com.leo.zu.entities.FbsBudgetCorp">
        <id column="CORP_CODE" property="corpCode" jdbcType="VARCHAR"/>
        <id column="CORP_NAME" property="corpName" jdbcType="VARCHAR"/>
        <id column="BUDGET_FLAG" property="budgetFlag" jdbcType="VARCHAR"/>
        <id column="IM_CUST_NO" property="imCustNo" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="saveFbsBudgetCorpInfo">
        insert into fbs_budget_corp
            (CORP_CODE, CORP_NAME, BUDGET_FLAG, IM_CUST_NO)
        values
            (#{corpCode}, #{corpName}, #{budgetFlag}, #{imCustNo})

    </insert>

    <select id="getFbsBudgetCorp" resultMap="BaseResultMap">
        select *
        from fbs_budget_corp
        where im_cust_no = #{imCustNo}
        and corpCode = #{corpCode}
    </select>

    <select id="getFbsBudgetCorpByImCustNo" resultMap="BaseResultMap">
        select *
        from fbs_budget_corp
        where im_cust_no = #{imCustNo}
    </select>

    <select id="getFbsBudgetCorpOfControl" resultMap="BaseResultMap">
        select *
        from fbs_budget_corp
        where im_cust_no = #{imCustNo}
        and budget_flag = #{budgetFlag}
    </select>

    <update id="updateFbsBudgetCorpInfo">
        update fbs_budget_corp
        set budget_flag = #{budgetFlag}
        where im_cust_no = #{imCustNo}
        and corp_code = #{corpCode}
    </update>
</mapper>


